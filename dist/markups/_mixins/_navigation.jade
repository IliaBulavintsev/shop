mixin navigation(links)
    ul.navigation-menu-items.clearfix
        -each link in links
            a.navigation-menu-items-link(href='#')
                -if (link ==='Мобильные телефоны')
                    li.navigation-menu-items-item.navigation-menu-items-item_active= link
                -else
                    li.navigation-menu-items-item= link

mixin navigation-footer(links)
    ul.navigation-footer-items.clearfix
        -each link in links
            li.navigation-footer-items-item
                a(href='#').navigation-footer-items-link= link


mixin social_ico_header(socials)
    ul.social
        -each social in socials
            li.social-items
                a(href='#')
                    img(alt=social, src='img/'+social+'.png')

mixin social_ico_footer(socials)
    ul.social.social_footer
        -each social in socials
            li.social-items.social-items_footer
                a(href='#')
                    img.social-ico-footer(alt=social, src='img/'+social+'-footer.png')




mixin accardeon(cat)
    ul
        ul= cat.name
            +accardeon_items(cat.items)

mixin accardeon_items(items)
    -each item in items
        li
            label
                input(type="checkbox")
                = item