mixin navigation(links)
    ul
        -each link in links
            li
                a(href='#')= link

mixin social_ico(socials)
    ul
        -each social in socials
            li
                img(alt=social)


mixin accardeon(cat)
    ul
        ul= cat.name
            +accardeon_items(cat.items)

mixin accardeon_items(items)
    -each item in items
        li
            label
                input(type="checkbox")
                = item